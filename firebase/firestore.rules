rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Users collection - each user can only access their own data
    match /users/{uid} {
      // User can read/write their own user document
      allow read, write: if isOwner(uid);
      
      // Notes subcollection
      match /notes/{noteId} {
        // User can read/write their own notes
        allow read: if isOwner(uid);
        allow create: if isOwner(uid);
        allow update: if isOwner(uid);
        allow delete: if isOwner(uid);
      }
      
      // Vault subcollection (encrypted password vault)
      match /vault/{itemId} {
        // User can read/write their own vault items
        allow read: if isOwner(uid);
        allow create: if isOwner(uid);
        allow update: if isOwner(uid);
        allow delete: if isOwner(uid);
      }
      
      // Keys subcollection (encryption key parameters)
      match /keys/{keyId} {
        // User can read/write their own key parameters
        allow read: if isOwner(uid);
        allow create: if isOwner(uid);
        allow update: if isOwner(uid);
        // Prevent deletion of key parameters for safety
        allow delete: if false;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
